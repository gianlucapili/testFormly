/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "include": [
    "src/app/modules/options/**/*.ts",
    "src/app/modules/components/data/*.ts",
  ],
  "exclude": [
    "src/app/modules/options/module-options.ts",
    "src/app/modules/options/index.ts",
    "src/app/modules/components/index.ts",
    "src/app/modules/components/forms/index.ts",
  ],
}