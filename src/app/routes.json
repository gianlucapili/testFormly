[
  {
    "path": [
      "formly",
      "formly/:id"
    ],
    "component": "formly-component",
    "title": "Formly",
    "subTitle": "Sub Formly",
    "apis": {
      "data1": {
        "verb": "get",
        "method": "https://jsonplaceholder.typicode.com/todos/1",
        "params": {
          "id": "$current.routeData.id"
        }
      }
    },
    "components": [
      {
        "$ref": "card1",
        "name": "rlb-card-component",
        "apis": {
          "data1": {
            "verb": "get",
            "method": "https://jsonplaceholder.typicode.com/todos/{current.routeParams.id}",
            "params": {
              "id": "$current.routeData.id"
            }
          }
        },
        "data": {
          "title": "$current.routeData.title",
          "text": "#common.subTitle",
          "image": "https://via.placeholder.com/150"
        },
        "components": [
          {
            "name": "rlb-button-component",
            "data": {
              "text": "Go somewhere",
              "style": "btn-primary"
            }
          }
        ]
      },
      {
        "name": "rlb-alert-component",
        "data": {
          "text": "This is a alert message.",
          "type": "success"
        }
      },
      {
        "name": "rlb-form-component",
        "data": [
          {
            "key": "Input",
            "type": "input",
            "props": {
              "label": "Input",
              "placeholder": "Placeholder",
              "description": "Description",
              "required": "true"
            }
          }
        ]
      }
    ]
  },
  {
    "path": "extra-page",
    "component": "page-extra-component"
  }
]